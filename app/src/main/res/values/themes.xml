<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.Kairos" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ka_icon_background</item>
        <item name="colorSecondaryContainer">@color/ka_icon_background</item>
        <item name="colorTertiary">@color/ka_icon_background</item>
        <item name="android:windowBackground">@color/bubbles_color</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="statusBarBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Kairos" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ka_icon_background</item>
        <item name="statusBarBackground">@color/ka_icon_background</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bubbles_color</item>
    </style>

    <style name="Theme.Kairos.Dashboard" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ka_icon_background</item>
        <item name="colorSecondaryContainer">@color/ka_icon_background</item>
        <item name="colorTertiary">@color/ka_icon_background</item>
        <item name="android:windowBackground">@color/bubbles_color</item>
        <item name="statusBarBackground">@color/ka_icon_background</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Kairos.SingleColour" parent="Base.Theme.Kairos">
        <item name="android:windowBackground">@color/bubbles_color</item>
        <item name="statusBarBackground">@color/bubbles_color</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog.Monet</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog.Monet</item>
    </style>

    <style name="Widget.BottomNavigationViewInactive"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/geologica_regular</item>
    </style>

    <style name="Widget.BottomNavigationViewActive"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/geologica_bold</item>
    </style>

    <!-- Preference dialog theme -->
    <style name="ThemeOverlay.App.MaterialAlertDialog.Monet" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="dialogCornerRadius">@dimen/rounded_corners</item>
        <item name="android:background">@drawable/dialog_background_monet</item>
    </style>

    <!-- Note: shape appearance doesn't work with the preference dialogs (they're not material) -->
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/rounded_corners</item>
    </style>
</resources>